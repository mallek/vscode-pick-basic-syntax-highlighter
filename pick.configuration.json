{
    "comments": {
        "lineComment": "*", "!"
    },
    "brackets": [
        ["{", "}"],	
        ["<", ">"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],	
        ["<", ">"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
		["!REGION", "!ENDREGION"],
		["*REGION", "*ENDREGION"]
    ],
    "surroundingPairs": [
        ["<", ">"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
	"folding": {
		"markers": {
			"start": "^\\s*(!|\\*)REGION\\b", 
			"end": "^\\s*(!|\\*)ENDREGION\\b"
		}
	}
}